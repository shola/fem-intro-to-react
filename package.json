    "@types/react-addons-test-utils": "^0.14.17",
    "axios": "0.15.2",
    "express": "4.14.0",
    "lodash": "4.16.2",
    "preact": "^6.4.0",
    "preact-compat": "^3.9.3",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "4.4.0",
    "react-router": "^3.0.0",
    "redux": "3.3.1",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "enzyme": "2.7.1",
    "jest": "^19.0.0",
    "jsdom": "9.5.0",
    "react-addons-test-utils": "15.4.2",
    "react-test-renderer": "15.4.2",
    "source-map-loader": "^0.2.0",
