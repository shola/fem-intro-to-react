      "js",
      "jsx"
    ],
    "transform": {
      ".*": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$"
  },
  "bugs": {
    "url": "https://github.com/shola/fem-intro-to-react/issues"
