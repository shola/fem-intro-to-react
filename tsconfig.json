{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "redux": ["node_modules/redux/dist/redux"],
            "react-redux": ["node_modules/react-redux/dist/react-redux"]
        }
    },
    "include": [
        "./src/**/*",
        "./public/data.json"
    ],
    "exclude": [
        "typings", "node_modules"
    ]
}